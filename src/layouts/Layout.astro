---
import '../styles/global.css';
import {createSchema} from '../seo/schema'

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
interface ISeoData {
	title: string;
	description: string;
	schema: string;
}

interface Props {
	SeoData: ISeoData;
  location: string;
}
const {SeoData, location} = Astro.props;



const canonicalUrl=Astro.url.pathname
---

<!doctype html>
<html class="" lang="fr-BE">
	<head>
		<meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{SeoData.title}</title>
    <meta name="description" content={SeoData.description} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="canonical" href=`https://assur-plombier.be${canonicalUrl}`/>
    <link rel="icon" type="image/svg+xml" href="/Assur-plombier-deboucheur.png" />
    <link rel="shortcut icon" href="/Assur-plombier-deboucheur.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/Assur-plombier-deboucheur.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="robots" content="index, follow" />
    <meta property="og:title" content={SeoData.title} />
    <meta property="og:description" content={SeoData.description} />
    <meta property="og:type" content="website" />
<meta property="og:image" content="https://assur-plombier.be/Assur-plombier-deboucheur.png">
    <meta property="og:url" content=`https://assur-plombier.be${canonicalUrl}` />
    <script type="application/ld+json" set:html={JSON.stringify(createSchema(location))} />
    
	</head>
	<body class="relative">
		<Header />
		<slot /> 
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
	}
</style>
