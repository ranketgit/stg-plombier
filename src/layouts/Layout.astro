---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ClientRouter } from "astro:transitions";
interface Props {
  meta_title: string;
  meta_description: string;
  schemaMarkup?: object;
}
const {meta_title,  meta_description,  schemaMarkup} = Astro.props;
---

<!doctype html>
<html lang="fr-BE">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>{meta_title}</title>
	<meta name="description" content={meta_description} />
	<link rel="sitemap" href="/sitemap-index.xml" />
	<link rel="canonical" href={new URL(Astro.url.pathname, import.meta.env.SITE).href} item-prop="url" />
	<meta name="robots" content="index, follow" />
	<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<link rel="shortcut icon" href="/favicon.ico" />
	<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
	<link rel="manifest" href="/site.webmanifest" />
	<meta property="og:title" content={meta_title} />
	<meta property="og:description" content={meta_description} />
	<meta property="og:type" content="website" />
	<meta property="og:url" content={new URL(Astro.url.pathname, import.meta.env.SITE).href} />
	<meta name="twitter:title" content={meta_title} />
	<meta name="twitter:description" content={meta_description} />
	<meta property="og:image" content="https://assur-plombier.be/assur-plombier-deboucheur-chauffagiste.webp" />
	<meta name="twitter:image" content="https://assur-plombier.be/assur-plombier-deboucheur-chauffagiste.webp" />
	<meta name="twitter:card" content="summary_large_image" />
	{schemaMarkup && (
		<script type="application/ld+json" set:html={JSON.stringify(schemaMarkup)} />
	)
  	}
	<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "Organization",
			"name": "Assur Plombier",
			"alternateName": "Assur Plombier Belgium",
			"url": "https://assur-plombier.be/",
			"logo": "https://assur-plombier.be/logo-assur-plombier.svg",
			"image": "https://assur-plombier.be/assur-plombier-deboucheur-chauffagiste.webp.webp",
			"description": "Votre plombier déboucheur professionnel à proximité en Belgique. Intervention rapide et service de qualité garanti 24h/24 et 7j/7.",
			"email": "contact@assur-plombier.be",
			"telephone": "+32 476 23 23 23",
			"address": {
				"@type": "PostalAddress",
				"streetAddress": "Boulevard Anspach 42",
				"addressLocality": "Brussels",
				"postalCode": "1000",
				"addressCountry": "BE"
			},
			"areaServed": {
				"@type": "Country",
				"name": "Belgium"
			},
			"contactPoint": {
				"@type": "ContactPoint",
				"telephone": "+32 476 23 23 23",
				"contactType": "Customer Service",
				"availableLanguage": ["fr", "nl", "en"],
				"areaServed": "BE"
			},
			"sameAs": []
		}
	</script>
  	<ClientRouter />
	</head>
	<body class="relative">
		<Header />
		<slot /> 
		<Footer />
	</body>
</html>
<style>
	html,
	body {
		margin: 0;
		width: 100%;
	}
</style>
