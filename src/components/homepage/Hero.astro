---
// src/components/Hero.astro
import Contact from '../Contact.astro'; // Import the Contact form component

// Interface only for Hero's own content
interface IHeroData {
  title: string;
  subtitle: string;
  phoneNumber: string;
  callButtonText: string;
  serviceButtonText: string;
  backgroundImageUrl: string;
}

interface Props {
  heroData: IHeroData;
}

const { heroData } = Astro.props;
---

<section class="relative text-white overflow-hidden">
  <div
    class="absolute inset-0 bg-cover bg-center z-0"
    style={`background-image: url('${heroData.backgroundImageUrl}');`}
  >
  </div>
  <div class="absolute inset-0 bg-gradient-to-r from-blue-800 z-0"></div>

  <div class="container mx-auto px-4 py-12 md:py-16 relative z-10">
    <div class="grid md:grid-cols-2 gap-8 items-center max-w-5xl mx-auto">
      <div class="space-y-4">
        <div class="inline-flex items-center justify-center px-4 py-2 rounded-2xl text-sm font-bold text-white" 
        style={{
          background: 'linear-gradient(to right, #000000 33%, #FDDA24 33%, #FDDA24 66%, #EF3340 66%)'
        }}>
          Intervention 24/7 en Belgique
        </div>
        <h1 class="text-3xl md:text-4xl font-bold text-white">
          {heroData.title}
        </h1>
        <p class="text-base md:text-lg text-white/90">
          {heroData.subtitle}
        </p>
        <div class="flex flex-col sm:flex-row gap-3 pt-3">
          <a
            href={`tel:${heroData.phoneNumber.replace(/\s/g, '')}`}
            class="bg-white text-blue-800 hover:bg-gray-100 font-semibold py-2 px-4 rounded-xl inline-flex items-center justify-center transition-colors duration-300 shadow-md"
          >
            {heroData.callButtonText}
          </a>
          <a
            href="#services"
            class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-blue-800 font-semibold py-2 px-4 rounded-xl inline-flex items-center justify-center transition-colors duration-300"
          >
            {heroData.serviceButtonText}
          </a>
        </div>

        <!-- Trust Indicators Section -->
        <div class="flex flex-wrap items-center gap-6 pt-6">
          <!-- Star Rating -->
          <div class="flex flex-col items-center">
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.034c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
