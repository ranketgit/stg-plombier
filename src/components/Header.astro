---
// src/components/MainMenu.astro
---

<section class="bg-red-600 text-white flex justify-center min-h-8">
    <a href="" class="p-1 px-4 font-bold border rounded-xl border-white m-2 hover:scale-105 transition-transform duration-200 hover:cursor-pointer "> 0472/80.80.80 </a>
</section>
<nav class="bg-white text-gray-800 py-3 w-full transition-all duration-300">
    
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="flex justify-between items-center">
        <!-- Logo -->
        <div class="flex items-center">
          <a href="/" class="flex items-center">
            <span class="ml-2 text-xl font-bold text-blue-700">PlombierLogo</span>
          </a>
        </div>
        
        <!-- Desktop Menu -->
        <div class="hidden lg:flex items-center space-x-1">
          <a href="/" class="px-3 py-2 hover:text-blue-700 font-medium">Accueil</a>
          
          <!-- Services Dropdown -->
          <div class="relative group">
            <button class="px-3 py-2 hover:text-blue-700 font-medium flex items-center">
              Services
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div class="absolute left-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 z-50">
              <div class="py-1">
                <a href="/services/debouchage" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Débouchage</a>
                <a href="/services/plomberie" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Plomberie générale</a>
                <a href="/services/chauffage" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Chauffage</a>
                <a href="/services/sanitaire" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Sanitaire</a>
                <a href="/services/urgence" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Urgences 24/7</a>
              </div>
            </div>
          </div>
          
          <!-- Zones Dropdown -->
          <div class="relative group">
            <button class="px-3 py-2 hover:text-blue-700 font-medium flex items-center">
              Zones d'Intervention
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div class="absolute left-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 z-50">
              <div class="py-1">
                <a href="/zones/bruxelles" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Bruxelles</a>
                <a href="/zones/brabant-wallon" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Brabant Wallon</a>
                <a href="/zones/liege" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Liège</a>
                <a href="/zones/namur" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Namur</a>
                <a href="/zones/autres" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Autres régions</a>
              </div>
            </div>
          </div>
          
          <a href="/about" class="px-3 py-2 hover:text-blue-700 font-medium">À Propos</a>
          <a href="/contact" class="px-3 py-2 hover:text-blue-700 font-medium">Contact</a>
        </div>
        
        <!-- CTA Button -->
        <div class="hidden lg:inline">
          <a href="tel:0800123456" class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-4 py-2 rounded-md flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Urgence 24/7
          </a>
        </div>
        
        <!-- Mobile Menu Button -->
        <div class="lg:hidden">
          <button type="button" id="mobile-menu-button" class="text-gray-700 hover:text-blue-700 focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
      
      <!-- Mobile Menu (hidden by default) -->
      <div id="mobile-menu" class="lg:hidden hidden pt-4 pb-2">
        <a href="/" class="block py-2 px-2 text-gray-800 hover:bg-gray-100 rounded">Accueil</a>
        
        <!-- Mobile Services Dropdown -->
        <div class="mobile-dropdown">
          <button class="w-full text-left flex justify-between items-center py-2 px-2 text-gray-800 hover:bg-gray-100 rounded">
            Services
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="pl-4 hidden">
            <a href="/services/debouchage" class="block py-2 px-2 text-gray-700 hover:bg-gray-100 rounded">Débouchage</a>
            <a href="/services/plomberie" class="block py-2 px-2 text-gray-700 hover:bg-gray-100 rounded">Plomberie générale</a>
            <a href="/services/chauffage" class="block py-2 px-2 text-gray-700 hover:bg-gray-100 rounded">Chauffage</a>
            <a href="/services/sanitaire" class="block py-2 px-2 text-gray-700 hover:bg-gray-100 rounded">Sanitaire</a>
            <a href="/services/urgence" class="block py-2 px-2 text-gray-700 hover:bg-gray-100 rounded">Urgences 24/7</a>
          </div>
        </div>
        
        <!-- Mobile Zones Dropdown -->
        <div class="mobile-dropdown">
          <button class="w-full text-left flex justify-between items-center py-2 px-2 text-gray-800 hover:bg-gray-100 rounded">
            Zones d'Intervention
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="pl-4 hidden">
            <a href="/zones/bruxelles" class="block py-2 px-2 text-gray-700 hover:bg-gray-100 rounded">Bruxelles</a>
            <a href="/zones/brabant-wallon" class="block py-2 px-2 text-gray-700 hover:bg-gray-100 rounded">Brabant Wallon</a>
            <a href="/zones/liege" class="block py-2 px-2 text-gray-700 hover:bg-gray-100 rounded">Liège</a>
            <a href="/zones/namur" class="block py-2 px-2 text-gray-700 hover:bg-gray-100 rounded">Namur</a>
            <a href="/zones/autres" class="block py-2 px-2 text-gray-700 hover:bg-gray-100 rounded">Autres régions</a>
          </div>
        </div>
        
        <a href="/about" class="block py-2 px-2 text-gray-800 hover:bg-gray-100 rounded">À Propos</a>
        <a href="/contact" class="block py-2 px-2 text-gray-800 hover:bg-gray-100 rounded">Contact</a>
      </div>
    </div>
  </nav>
  
  <script>
    // Mobile menu toggle
    document.addEventListener('DOMContentLoaded', () => {
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      
      mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
      
      // Mobile dropdowns
      const mobileDropdowns = document.querySelectorAll('.mobile-dropdown button');
      mobileDropdowns.forEach(dropdown => {
        dropdown.addEventListener('click', (e) => {
          const content = dropdown.nextElementSibling;
          content?.classList.toggle('hidden');
        });
      });
    });
  </script>