---
interface Props {
  cityName: string;
}
const { cityName } = Astro.props;

const testimonials = [
  {
    quote: `Un grand merci au plombier qui est intervenu rapidement pour notre douche bouchée. Professionnel, efficace et tarif honnête. Je recommande vivement leurs services à tous les habitants de ${cityName}.`,
    name: "Marie D.",
    location: cityName
  },
  {
    quote: `J'ai fait appel à leurs services pour l'installation complète de ma salle de bain à ${cityName}. Travail impeccable, conseils pertinents et respect des délais. Une équipe vraiment professionnelle.`,
    name: "Pierre L.",
    location: cityName
  },
  {
    quote: `Intervention ultra rapide pour une fuite sous l'évier un samedi soir. Le plombier est arrivé en 30 minutes et a tout réglé en moins d'une heure. Service exemplaire!`,
    name: "Sophie T.",
    location: cityName
  }
];
---
<section class="bg-gray-100 py-12 md:py-16">
  <div class="container mx-auto px-4">
    <h2 class="text-2xl md:text-3xl font-bold text-gray-800 mb-10 text-center">
      Témoignages de Nos Clients à {cityName}
    </h2>
    <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {testimonials.map(testimonial => (
        <div class="bg-white p-6 rounded-lg shadow-sm border-l-4 border-blue-500">
          <blockquote class="italic text-gray-600 mb-4">
            "{testimonial.quote}"
          </blockquote>
          <p class="font-semibold text-gray-800">{testimonial.name}</p>
          <p class="text-sm text-gray-500">{testimonial.location}</p>
        </div>
      ))}
    </div>
  </div>
</section>