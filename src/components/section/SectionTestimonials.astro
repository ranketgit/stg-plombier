---
interface Props {
  sectionName: string;
  parentCityName: string;
}
const { sectionName, parentCityName } = Astro.props;

const testimonials = [
  {
    quote: `Intervention rapide et efficace pour notre douche bouchée. Le plombier était parfaitement familier avec les installations typiques du quartier ${sectionName}. Service impeccable!`,
    name: "Jean M.",
    location: `${sectionName} - ${parentCityName}`
  },
  {
    quote: `J'ai fait appel à leurs services pour une fuite sous mon évier. Diagnostic précis et réparation propre. Très satisfait de leur connaissance de notre quartier.`,
    name: "Isabelle D.",
    location: `${sectionName} - ${parentCityName}`
  }
];
const QuoteIcon = `<svg class="h-8 w-8 text-blue-200" fill="currentColor" viewBox="0 0 24 24"><path d="M6 17h3l2-4V7H5v6h3zm8 0h3l2-4V7h-6v6h3z"></path></svg>`;
---
<section class=" py-12 md:py-16">
  <div class="container mx-auto px-4">
    <h2 class="text-2xl md:text-3xl font-bold text-gray-800 mb-10 text-center">
      Témoignages de nos clients à {sectionName} {parentCityName}
    </h2>
    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      {testimonials.map(testimonial => (
        <div class="bg-white p-6 rounded-3xl shadow-lg relative overflow-hidden">
          <div class="absolute top-0 right-0 -mt-2 -mr-2 opacity-10">
              <Fragment set:html={QuoteIcon} />
          </div>
          <blockquote class="text-gray-600 mb-4 italic relative z-10">
            "{testimonial.quote}"
          </blockquote>
          <div class="mt-4 pt-4 border-t border-gray-200">
              <p class="font-semibold text-gray-800">{testimonial.name}</p>
              <p class="text-sm text-blue-600 font-medium">{testimonial.location}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>