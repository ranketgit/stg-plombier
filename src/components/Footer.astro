---
// src/components/Footer.astro

interface Props {
  companyName?: string;
  phoneNumber?: string;
  email?: string;
  address?: string;
  vatNumber?: string;
}

const { 
  companyName = "PlomberiePro", 
  phoneNumber = "0476/23.23.23", 
  email = "contact@plomberiepro.be",
  address = "",
  vatNumber = "BE 0123.456.789"
} = Astro.props;

const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-white pt-12 pb-8">
  <div class="container mx-auto px-4 max-w-6xl">
    <!-- Footer Top Section -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8 mb-10">
      <!-- Company Info -->
      <div>
        <div class="flex items-center mb-5">
          <img src="/favicon.svg" alt="Logo Assur plombier" class="h-10 w-auto" />
        
        </div>
        <p class="text-gray-400 mb-5">
          Votre plombier professionnel en Belgique. Intervention rapide et service de qualité garanti 24h/24 et 7j/7.
        </p>
        <div class="flex flex-col space-y-3">
          <a href={`tel:+32476232323`} class="flex items-center text-gray-300 hover:text-blue-400 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            {phoneNumber}
          </a>
        
          
        </div>
      </div>
     
      
      <!-- Zones Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-white border-b border-gray-700 pb-2">Zones d'Intervention</h3>
        <ul class="space-y-2">
          <li><a href="/zones/bruxelles" class="text-gray-300 hover:text-blue-400 transition-colors">Bruxelles</a></li>
<li><a href="/plombier-region-antwerpen/" class="text-gray-300 hover:text-blue-400 transition-colors">Antwerpen</a></li>
<li><a href="/plombier-region-bruxelles-capitale/" class="text-gray-300 hover:text-blue-400 transition-colors">Bruxelles-Capitale</a></li>
<li><a href="/plombier-region-hainaut/" class="text-gray-300 hover:text-blue-400 transition-colors">Hainaut</a></li>
<li><a href="/plombier-region-brabant-wallon/" class="text-gray-300 hover:text-blue-400 transition-colors">Brabant Wallon</a></li>
<li><a href="/plombier-region-liege/" class="text-gray-300 hover:text-blue-400 transition-colors">Liège</a></li>
<li><a href="/plombier-region-limbourg/" class="text-gray-300 hover:text-blue-400 transition-colors">Limbourg</a></li>
<li><a href="/plombier-region-luxembourg/" class="text-gray-300 hover:text-blue-400 transition-colors">Luxembourg</a></li>
<li><a href="/plombier-region-namur/" class="text-gray-300 hover:text-blue-400 transition-colors">Namur</a></li>
<li><a href="/plombier-region-flandre-orientale/" class="text-gray-300 hover:text-blue-400 transition-colors">Flandre Orientale</a></li>
<li><a href="/plombier-region-brabant-flamand/" class="text-gray-300 hover:text-blue-400 transition-colors">Brabant Flamand</a></li>
<li><a href="/plombier-region-flandre-occidentale/" class="text-gray-300 hover:text-blue-400 transition-colors">Flandre Occidentale</a></li>
        </ul>
      </div>
  
  

    
    <!-- Footer Bottom -->
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="text-gray-400 text-sm mb-4 md:mb-0">
        <p>&copy; {currentYear} {companyName}. Tous droits réservés.</p>
        <p class="mt-1">TVA: {vatNumber} | <a href="/mentions-legales" class="hover:text-blue-400 transition-colors">Mentions légales</a></p>
      </div>
      
     
    
    <!-- Back to Top Button -->
    <div class="text-center mt-8">
      <a href="#top" class="inline-flex items-center text-gray-400 hover:text-blue-400 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
        </svg>
        Retour en haut
      </a>
    </div>
  </div>
</footer>

<script>
  // Smooth scroll for back to top button
  document.addEventListener('DOMContentLoaded', () => {
    const scrollToTopButton = document.querySelector('a[href="#top"]');
    
    if (scrollToTopButton) {
      scrollToTopButton.addEventListener('click', (e) => {
        e.preventDefault();
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
      });
    }
  });
</script>